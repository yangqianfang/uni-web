.sider-menu .uni-drawer__content {
  width: 258px;
}
.sider-menu .uni-list-item__container:after {
  background-color: transparent;
}
.sider-menu .uni-list:after {
  background-color: transparent;
}
.sider-menu .uni-list:before {
  background-color: transparent;
}
.sider-menu .drawer-container {
  padding: 63px 36px;
  height: 100%;
}
.sider-menu .drawer-container .drawer-header {
  text-align: center;
}
.sider-menu .drawer-container .drawer-header .user-avatar {
  margin-bottom: 13px;
  width: 54px;
  height: 54px;
}
.sider-menu .drawer-container .drawer-header .user-name {
  font-size: 18px;
  color: #333333;
  font-weight: bold;
  margin-bottom: 2px;
}
.sider-menu .drawer-container .drawer-header .user-tips {
  color: #655553;
  font-size: 14px;
}
.sider-menu .drawer-container .drawer-menu {
  margin-top: 70px;
}
.sider-menu .drawer-container .drawer-menu .item {
  padding: 12px 15px;
  font-size: 16px;
  position: relative;
}
.sider-menu .drawer-container .drawer-menu .item text {
  margin-right: 20rpx;
  font-size: 40rpx;
  vertical-align: middle;
  position: relative;
  top: -4rpx;
}
.sider-menu .drawer-container .uni-list-item__content-note {
  position: absolute;
  right: 0;
}
.sider-menu .drawer-container .logout {
  display: inline-block;
  position: absolute;
  bottom: 40rpx;
  left: 40rpx;
}
.sider-menu .drawer-container .icontuichu2 {
  margin-right: 6rpx;
}

