          align-items: flex-start;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  padding: 8rpx 50rpx;
}
.input-item:last-child {
  margin-top: 26rpx;
}
.input-item .iconshouji {
  position: absolute;
  top: 16rpx;
  left: 0rpx;
  font-size: 40rpx;
  color: #CCCCCC;
}
.input-item .iconyanzhengma {
  position: absolute;
  top: 12rpx;
  left: 0rpx;
  font-size: 40rpx;
  color: #CCCCCC;
}
.input-item .code-button {
  width: 200rpx;
  height: 60rpx;
  padding: 0 5rpx;
  -webkit-border-radius: 30rpx;
          border-radius: 30rpx;
  border: 1px solid #fc8b27;
  color: #fc8b27;
  font-size: 22rpx;
  text-align: center;
  line-height: 60rpx;
  position: absolute;
  background: #fff;
  right: 0;
  top: 8rpx;
  z-index: 2;
}
.input-item .code-button[disabled] {
  background: #f7f7f7;
  border: 1px solid #f7f7f7;
  color: #999;
}
.input-item .disabled {
  border-color: #ddd;
  color: #ddd;
}
.input-item .disabled:active {
  background-color: #fff;
}
.input-item input {
  height: 60rpx;
  font-size: 30rpx;
  color: #333;
  width: 100%;
}
