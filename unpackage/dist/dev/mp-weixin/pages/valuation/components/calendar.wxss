.wrap .calendar-box {
  margin: 0 auto;
  width: 100%;
}
.wrap .calendar-box ._tr ._td {
  text-align: center;
  height: 76rpx;
  vertical-align: top;
  color: #999999;
  line-height: 1;
  padding: 8rpx;
  background: #FFF;
  border: 0;
}
.wrap .calendar-box ._tr ._td ._a {
  text-align: center;
  width: 76rpx;
  height: 76rpx;
  color: #999999;
  line-height: 1;
  padding: 8rpx;
  display: block;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.wrap .calendar-box ._tr ._td .date {
  display: block;
  text-align: center;
  color: #333333;
  font-size: 28rpx;
  margin-bottom: 2rpx;
  font-weight: bold;
}
.wrap .calendar-box ._tr .calendar-price {
  display: block;
  color: #999999;
  text-align: center;
  font-size: 18rpx;
}
.wrap .calendar-box ._tr ._dfn {
  font-style: normal;
  font-size: 14rpx;
  font-family: Arial !important;
}
.wrap .calendar-box ._tr .today ._a {
  background: -webkit-gradient(linear, left top, right top, color-stop(1%, #ffa800), to(#ff6100));
  background: -webkit-linear-gradient(left, #ffa800 1%, #ff6100 100%);
  background: linear-gradient(90deg, #ffa800 1%, #ff6100 100%);
  -webkit-border-radius: 50%;
          border-radius: 50%;
}
.wrap .calendar-box ._tr .today .date, .wrap .calendar-box ._tr .today .calendar-price {
  color: #FFF;
}
.calendar-num {
  position: relative;
  height: 66rpx;
  border-top: 2rpx solid #CCC;
  border-bottom: 2rpx solid #CCC;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-bottom: 14rpx;
}
.calendar-num .calendar-thead-item {
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  color: #999999;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}

