.photo-container {
  padding: 36rpx;
  padding-top: 20rpx;
  padding-bottom: 200rpx;
}
.photo-container .photo-box {
  margin-left: -10px;
  margin-right: -10px;
  margin-top: 4rpx;
}
.photo-container .photo-box .photo-item {
  padding-left: 10px;
  padding-right: 10px;
  width: 50%;
  height: 290rpx;
  float: left;
  margin: 16rpx 0;
}
.photo-container .photo-box .photo-item .photo-wrap {
  width: 100%;
  height: 100%;
  -webkit-border-radius: 4px;
          border-radius: 4px;
  position: relative;
  overflow: hidden;
  background: #676767;
}
.photo-container .photo-box .photo-item .photo-wrap .photo-footer {
  background: #FF711B;
  font-size: 24rpx;
  color: #FFF;
  text-align: center;
  width: 100%;
  height: 62rpx;
  line-height: 62rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}
.photo-container .photo-box .photo-item .photo-wrap image {
  width: 100%;
  height: 100%;
}
.photo-container .warn {
  color: #FF0000;
  font-size: 24rpx;
  margin: 28rpx 0;
}
.photo-container .more-photo {
  width: 92px;
  height: 92px;
  line-height: 92px;
  text-align: center;
  background: #efefef;
  -webkit-border-radius: 4px;
          border-radius: 4px;
  font-size: 24rpx;
  color: #666;
  display: inline-block;
}
.photo-container .btn-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #FFF;
  padding: 40rpx 0;
}
.photo-container .btn-box .btn {
  width: 60%;
}
.photo-container .btn-box .btn.disabled {
  background: rgba(255, 144, 37, 0.6);
}
.photo-container .more-photo-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  height: 200rpx;
  overflow-y: auto;
  padding: 20rpx 10rpx;
  overflow-x: hidden;
}
.photo-container .more-photo-list .more-item {
  width: 92px;
  height: 92px;
  line-height: 92px;
  text-align: center;
  background: #efefef;
  -webkit-border-radius: 4px;
          border-radius: 4px;
  font-size: 24rpx;
  color: #666;
  display: inline-block;
  margin-bottom: 20rpx;
  position: relative;
}
.photo-container .more-photo-list .more-item image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.photo-container .more-photo-list .more-item .close {
  position: absolute;
  color: #fff;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  top: -10rpx;
  right: -12rpx;
  background: #FF711B;
  line-height: 30rpx;
  text-align: center;
  font-family: "黑休";
  z-index: 2;
}
.photo-container .more-photo-list:after {
  display: block;
  content: "";
  width: 92px;
  height: 0px;
}
.msg-test {
  margin: 20rpx;
  margin-bottom: 80rpx;
  display: block;
}
.popup-dialog .btn {
