.tab {
  border-bottom: 1rpx solid #999999;
}
.tab .segmented-control-item {
  line-height: 100rpx;
  font-size: 32rpx;
}
.content {
  padding: 0 32rpx;
}
.content .photo-box {
  margin-top: 56rpx;
  margin-bottom: 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.content .photo-box .photo-item {
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 46%;
          flex: 0 0 46%;
  background: #eeeeee;
  -webkit-border-radius: 8rpx;
          border-radius: 8rpx;
  height: 188rpx;
  margin-right: 4%;
  padding: 40rpx 0;
  text-align: center;
  position: relative;
}
.content .photo-box .photo-item:nth-child(2) {
  margin-right: 0;
}
.content .photo-box .photo-item .iconfont {
  display: block;
  font-size: 60rpx;
  color: #666;
  margin-bottom: 12rpx;
}
.content .photo-box .photo-item text {
  color: #999999;
  font-size: 28rpx;
}
.content .photo-box .photo-item .id-front, .content .photo-box .photo-item .id-after {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.content .tips-label {
  color: #333333;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.content .label-item {
  color: #666666;
  font-size: 32rpx;
  border-bottom: 1rpx solid #EAEAEA;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}
.content .label-item .uni-input {
  display: inline-block;
  vertical-align: middle;
}
.content .btn {
  width: 60%;
  margin: 0 auto;
  position: absolute;
  bottom: 100rpx;
  left: 0;
  right: 0;
}
.content .btn.disabled {
  background: rgba(255, 144, 37, 0.6);
}

